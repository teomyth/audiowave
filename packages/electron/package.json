{
  "name": "@audiowave/electron",
  "version": "0.2.2",
  "description": "Electron audio source for AudioWave - main and renderer process support",
  "keywords": [
    "electron",
    "audio",
    "source",
    "bridge",
    "ipc",
    "main-process",
    "renderer-process",
    "react"
  ],
  "author": "teomyth <teomyth@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teomyth/audiowave.git",
    "directory": "packages/electron"
  },
  "main": "dist/main/index.js",
  "types": "dist/main/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./main": {
      "types": "./dist/main/index.d.ts",
      "require": "./dist/main/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.esm.js",
      "require": "./dist/renderer/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "npm run dev:main & npm run dev:renderer",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite build --watch",
    "clean": "rm -rf dist",
    "type-check": "npm run type-check:main && npm run type-check:renderer",
    "type-check:main": "tsc -p tsconfig.main.json --noEmit",
    "type-check:renderer": "tsc -p tsconfig.renderer.json --noEmit"
  },
  "dependencies": {
    "@audiowave/react": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.2.4",
    "typescript": "^5.8.3",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
